<% breadcrumb :contact %>
<div class="card col-sm-10 mt-5 mx-auto px-0">
  <div class="card-header">
    <h2>お問い合わせ</h2>
  </div>
  <div class="card-body">
    <%= form_with model: @contact do |f| %>

      <div class="form-group">
        <%= f.label :name, "名前", :class => "form-label" %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, '返信先メールアドレス', :class => "form-label" %>
        <%= f.text_field :email, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :message, 'お問い合わせ内容', :class => "form-label"  %>
        <%= f.text_area :message, size: '10x10', :class => "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit '送信する', :class => "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>