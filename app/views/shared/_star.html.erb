<%= javascript_pack_tag 'star' %>

<!-- 星評価平均 -->
  <script>
    $('#star-rate-<%= result.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      readOnly: true,
      half: true,
      score: <%= result.comments.average(:rate).to_f.round(1) %>,
    });
  </script> 

