<div class="home_comment mb-3">
  <div class="row">
    <div class="col-md-2 text-center pt-2">
      <%= link_to account_path(comment) do %>
        <%= image_tag comment.user.image.url, width: '130px' %>
        <p><%= comment.user.name %></p>
      <% end %>
    </div>

    <div class="col-md-6">
      <div class="comment_content">
        <span class="font-weight-bold"><%= comment.title %></span>｜<span><%= l comment.created_at %></span>
        <br><span id="star-rate-<%= comment.id %>"></span>

        <script>
          $('#star-rate-<%= comment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            readOnly: true,
            score: <%= comment.rate %>,
          });
        </script>

        <p><%= comment.content %></p>
      </div>
    </div>

    <div class="col-md-4 text-right">
      <%= link_to item_path(comment.item) do %>
        <%= image_tag comment.item.image_url, width: '200px' %>
        <p><%= comment.item.company %> / <%= comment.item.name %></p>
      <% end %>
    </div>

    <% if comment.user == current_user %>
      <div class="col-md-12 text-right">
        <p>
          <%= link_to "口コミを削除する", item_comment_path(comment.item_id, comment.id), method: :delete, data: { confirm: "本当に削除しますか?" }, class:"btn btn-success btn-sm" %>
          <%= link_to "口コミを編集する", edit_item_comment_path(comment.item_id, comment.id), class:"btn btn-success btn-sm" %>
        </p>
      </div>
    <% end %>
  </div>
</div>