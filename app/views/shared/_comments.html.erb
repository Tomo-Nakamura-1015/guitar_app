<div>
  <span><%= comment.title %></span>｜
  <span id="star-rate-<%= comment.id %>"></span>

  <script>
    $('#star-rate-<%= comment.id %>').raty({
      size: 36,
      starOff:  '<%= asset_path('star-off.png') %>',
      starOn : '<%= asset_path('star-on.png') %>',
      starHalf: '<%= asset_path('star-half.png') %>',
      readOnly: true,
      score: <%= comment.rate %>,
  });
  </script> 

  <p><%= comment.content %></p>
  <% if comment.user == current_user %>
    <span><%= link_to "[口コミを削除する]", item_comment_path(comment.item_id, comment.id), method: :delete, data: { confirm: "本当に削除しますか?" } %></span>
  <% end %>
  <%= l comment.created_at %>に投稿
</div>