<% breadcrumb :new_user %>

<div class="card col-sm-6 mt-5 mx-auto px-0">
  <div class="card-header">
    <h2 class="text-center">新規登録</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード（６文字以上）" %><br>
        <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :image, "画像" %><br>
        <%= f.file_field :image, :class => "form-control-file"  %>
      </div>

      <div class="actions mb-1">
        <%= f.submit "新規登録する", :class => "btn btn-success btn-block" %>
      </div>

      アカウントをお持ちの方はこちらから<%= link_to "ログイン", new_user_session_path %>してください。
    <% end %>
  </div>
</div>
